{
  "compilerOptions": {
    "target": "es2017",
    "strict": true,
    "watch": false,
    "module": "commonjs",
    "noImplicitAny": true,
    "importHelpers": false,
    "sourceMap": false,
    "declaration": true,
    "stripInternal": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "outDir": "dist",
  },
  "include": [
    "Demos/libs/origin-dragonbones.d.ts",
    "src/dragonBones-phaser/**/*"
  ],
  "exclude": [
    "node_modules",
    "out"
  ]
}