{
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "watch": false,
    "module": "commonjs",
    "noImplicitAny": true,
    "importHelpers": false,
    "sourceMap": true,
    "stripInternal": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "declaration": false,
  },
  "include": [
    "phaser/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}